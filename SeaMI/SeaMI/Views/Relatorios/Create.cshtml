@model SeaMI.Models.Relatorio

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Relatorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nmRelatorio" class="control-label"></label>
                <input asp-for="nmRelatorio" class="form-control" />
                <span asp-validation-for="nmRelatorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dsRelatorio" class="control-label"></label>
                <input asp-for="dsRelatorio" class="form-control" />
                <span asp-validation-for="dsRelatorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dtRelatorio" class="control-label"></label>
                <input asp-for="dtRelatorio" class="form-control" />
                <span asp-validation-for="dtRelatorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cdUsuario" class="control-label">UsuarioID</label>
                <select asp-for="cdUsuario" class="form-control">
                    <option value="">Selecione...</option>
                    @foreach (var Usuario in ViewBag.Usuarios)
                    {
                        <option value="@Usuario.cdUsuario">@Usuario.cdUsuario</option>
                    }
                </select>
                <span asp-validation-for="cdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
